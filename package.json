{
  "name": "powerpiper-contract-demo",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:contract": "solium -d contracts/",
    "lint:contract:fix": "solium -d contracts/ --fix",
    "compile:local": "rm -rf build/ && truffle compile --network=development --optimize-runs 200 && npm run copy",
    "compile:ropsten": "rm -rf build/ && truffle compile --network=ropsten --optimize-runs 200 && npm run copy",
    "migrate:local": "truffle migrate --network=development --reset",
    "migrate:ropsten": "truffle migrate --network=ropsten --reset",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "rpc": "ganache-cli --defaultBalanceEther 100 --gasPrice 1 --gasLimit 0xfffffffffff --seed --networkId 336",
    "graph": "solgraph ./contracts/PowerPiperCrowdsale.sol > ./graph/PowerPiperCrowdsale.dot && dot -Tpng ./graph/PowerPiperCrowdsale.dot > ./graph/PowerPiperCrowdsale.png && solgraph ./contracts/PowerPiperToken.sol > ./graph/PowerPiperToken.dot && dot -Tpng ./graph/PowerPiperToken.dot > ./graph/PowerPiperToken.png",
    "test": "truffle test",
    "copy": "cp -R build/contracts/*.json app/src/contracts/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/powerpiper/demo_contract.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "zeppelin"
  ],
  "bugs": {
    "url": "https://github.com/powerpiper/demo_contract/issues"
  },
  "author": "Tadas Talaikis, PowerPiper Team <info@talaikis.com>",
  "license": "GPLv3",
  "dependencies": {
    "cross-env": "^5.1.4",
    "crypto": "^1.0.1",
    "dotenv": "^5.0.1",
    "truffle": "^4.1.3",
    "truffle-contract": "^1.1.11",
    "truffle-hdwallet-provider-privkey": "^0.1.0",
    "truffle-wallet-provider": "0.0.5",
    "web3": "^0.20.0",
    "zeppelin-solidity": "^1.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^3.14.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "ganache-cli": "^6.1.0",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "solgraph": "^0.2.6",
    "solidity-coverage": "^0.4.14",
    "solium": "^1.1.5"
  }
}
